<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record model="ir.ui.view" id="product_template_form__view_inherit_motorcycle_registry">
		<field name="name">product.template.form..view.inherit.academy</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//notebook" position="inside">
				<page string="Motorcycle Information">
					<form string="Motorcycle View">
						<group>
							<group>
								<separator string="Motorcycle Information" />
								<field name="motorcycle_make" />
								<field name="motorcycle_model" />
								<field name="motorcycle_year" />
								<field name="curb_weight" />
								<field name="motorcycle_launch_date" />
								<separator string="Power Information" />
								<field name="battery_capacity" />
								<field name="charge_time" />
								<field name="total_range" />
							</group>
							<group>
								<separator string="Motor Information" />
								<field name="horsepower" />
								<field name="top_speed" />
								<field name="torque" />
							</group>
						</group>	
					</form>
				</page>
			</xpath>
		</field>
	</record>
</odoo>